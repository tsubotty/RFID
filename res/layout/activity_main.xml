<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TestSample"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="true"
    android:orientation="vertical">
    <LinearLayout 
        android:id="@+id/Row1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:baselineAligned="true"
        android:orientation="horizontal">
        <TextView android:id="@+id/condition"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/condition">
        </TextView>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/Row1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:baselineAligned="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/connect"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="@string/connect" >
        </Button>
        <Button android:id="@+id/disconnect"
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:text="@string/disconnect">
        </Button>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/Row2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:baselineAligned="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/read"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="@string/read" >
        </Button>
        <Button android:id="@+id/decrease"
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:text="@string/decrease">
      </Button>
    </LinearLayout>
    <!-- Server -->
    <LinearLayout 
        android:id="@+id/Row3"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="100dp">
        <TextView android:id="@+id/server"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/server">
        </TextView>
        <RadioGroup android:id="@+id/server_radiogroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/tsubo_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tsubo" />
            <RadioButton android:id="@+id/tkk_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tkk" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/Row4"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="100dp">
        <TextView android:id="@+id/place"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/place"> 
        </TextView>
        <RadioGroup android:id="@+id/place_radiogroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/elab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/elab" />
            <RadioButton android:id="@+id/equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equipment" />
            </RadioGroup>
    </LinearLayout>
    <!-- Send -->
    <LinearLayout 
        android:id="@+id/Row5"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:baselineAligned="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/send"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:text="@string/send" >
        </Button>
    </LinearLayout>
</LinearLayout>
